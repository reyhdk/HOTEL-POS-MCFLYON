{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "resources/js/*",
        "resources/js/**/*.vue",
        "resources/js/**/*.ts",
        "resources/js/**/*.js",
        "resources/js/**/*.d.ts"
    ],
    "compilerOptions": {
        "lib": ["ES2020", "DOM"],
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "allowJs": true
    },
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
